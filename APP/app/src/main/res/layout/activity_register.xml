<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/main"
    android:background="@color/white">

    <!-- Logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_tmg"
        android:layout_gravity="center"
        android:contentDescription="App Logo"/>

    <!-- Create Account Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Create Account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="10dp"/>

    <!-- Registration Form -->
    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
        android:background="@drawable/input_bg"
        android:hint="Name"
        android:padding="10dp" />
    <EditText
        android:id="@+id/organization"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:drawableStart="@drawable/baseline_account_circle_24"
        android:background="@drawable/input_bg"
        android:hint="Organization Name"
        android:padding="10dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:background="@drawable/input_bg"
        android:hint="Email ID"
        android:padding="10dp" />

    <!-- Terms and Conditions -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/baseline_enhanced_encryption_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/checkbox_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="I Read and agree to"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="openTerms"
        android:paddingStart="5dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Register Now"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"/>


    <!-- Login Link -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="openLoginActivity"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Already have an account? Login"
        android:textColor="@color/orange"
        android:textSize="16sp" />

</LinearLayout>
