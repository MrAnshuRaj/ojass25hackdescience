<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBack"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:contentDescription="App Logo"
        android:src="@drawable/logo_tmg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Create Account"
        android:textColor="@color/statusText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
        android:hint="Name"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/spinnerOrganization"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/input_bg"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/tvGuardAge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/baseline_account_circle_24"
        android:hint="Age"
        android:padding="10dp" />

    <EditText
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/baseline_contact_phone_24"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/baseline_email_24"
        android:hint="Email ID"
        android:padding="10dp" />

    <!-- Terms and Conditions -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/baseline_enhanced_encryption_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />


    <!-- Register Button -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/orange"
        android:text="Register Now"
        android:textColor="@color/btnTextClr"
        android:textSize="18sp" />


    <!-- Login Link -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="openLoginActivity"
        android:padding="10dp"
        android:text="Already have an account? Login"
        android:textColor="@color/reportTextClr"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
